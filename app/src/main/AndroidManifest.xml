<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.albineli.udacity.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.themovielist.PopularMovieApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="allowBackup">
        <activity
            android:name="com.themovielist.mainactivity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.themovielist.moviedetail.MovieDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.themovielist.movielist.MovieListActivity" />

        <provider
            android:name="com.themovielist.repository.data.MovieProvider"
            android:authorities="com.albineli.udacity.popuparmovies.provider"
            android:exported="false" />
    </application>

</manifest>